<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/weddingCeremony"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wedding ceremony"
        android:textSize="15sp"/>

    <CheckBox
        android:id="@+id/weddingReception"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wedding receptions"
        android:textSize="15sp"/>

    <CheckBox
        android:id="@+id/birthdayParty"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday party"
        android:textSize="15sp"/>

    <CheckBox
        android:id="@+id/bachelorParty"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bachelor party"
        android:textSize="15sp"/>

    <CheckBox
        android:id="@+id/cswHall"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conference/Seminar/Workshop"
        android:textSize="15sp"/>

    <CheckBox
        android:id="@+id/other"
        android:layout_marginEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textSize="15sp"/>


</LinearLayout>