<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/description">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgFlat"
                android:layout_width="150dp"
                android:layout_height="150dp"
               android:background="@drawable/welcome_walkthrough"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/imgBookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_bookmark_border_rgb_24"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"/>

            <LinearLayout
                android:layout_toEndOf="@+id/imgFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/txtRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Rent/month"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="City"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtFullAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="full address"
                android:textSize="15sp"
                android:textStyle="italic"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/txtPropertySubType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="4dp"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:text="Property sub type"
                android:padding="5dp"
                android:textAllCaps="false"/>

            <Button
                android:layout_toStartOf="@+id/btnWp"
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_background"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:text="Call"
                android:paddingHorizontal="5dp"
                android:drawableStart="@drawable/ic_baseline_call_24"
                android:textAllCaps="false"
                />

            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/btnWp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/wp_icon"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>