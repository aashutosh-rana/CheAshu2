<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dashboard.activity.DetailPropertyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".dashboard.activity.DetailPropertyActivity">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/imgThumbnailDetailMarriageHall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/welcome_walkthrough"/>
            <TextView
                android:id="@+id/txtImageCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12+"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                app:drawableStartCompat="@drawable/ic_baseline_camera_alt_24" />

        </RelativeLayout>
<!--</androidx.cardview.widget.CardView>-->
<!--        -->
<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="10dp">-->



                <TextView
                    android:id="@+id/txtHallName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hall name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/rgb"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/txtCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="city"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtFullAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full address"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnShowLocation"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Location"
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_background"
                        android:layout_height="wrap_content"
                        />

                    <Button
                        android:id="@+id/btnEnquiry"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:drawableEnd="@drawable/ic_baseline_call_24"
                        android:text="Enquiry"
                        android:paddingHorizontal="5dp"
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_background"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHallArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hall area"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="maximum capacity"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suitable for events"
                    android:textSize="12sp"
                    android:textColor="@color/rgb"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtSuitableFor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suitable for events"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pricing information"
                    android:textSize="12sp"
                    android:textColor="@color/rgb"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/txtPriceModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price model"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtVeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="veg per plate"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtNonVeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="non veg per plate"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtRentPerDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rent per day"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="extra charges information"
                    android:textSize="12sp"
                    android:textColor="@color/rgb"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/txtAdvanceDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="advance deposit"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtSecurityDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="security deposit"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtDecorationCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="decoration charge"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtElectricityCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="electricity charge"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtCancellationCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cancellation charge"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtOtherCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="other charges"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtTotalCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="estimated total charge"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="extra information"
                    android:textSize="12sp"
                    android:textColor="@color/rgb"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/txtAcRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ac room available"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtNonAcRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="non ac room available"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="similar marriage halls"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSimilarMarriageHall"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/marriagehall_item_list"/>

    </LinearLayout>
</ScrollView>
